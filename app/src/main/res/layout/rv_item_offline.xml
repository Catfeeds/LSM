<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="256dp"
    android:layout_height="200dp"
    android:layout_marginRight="20dp"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.yyyu.baselibrary.ui.widget.RoundImageView
        android:id="@+id/riv_bg"
        android:layout_width="256dp"
        android:layout_height="200dp"
        android:src="@mipmap/avril"
        app:borderRadius="8dp"
        app:type="round" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_coach"
        android:layout_alignLeft="@+id/tv_people"
        android:layout_marginBottom="10dp"
        android:text="#跑步"
        android:textColor="@color/my_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_people"
        android:layout_alignLeft="@+id/tv_people"
        android:layout_marginBottom="10dp"
        android:text="教练 Brand Steve"
        android:textColor="@color/my_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="230 people this week"
        android:textColor="#e3dfdf" />

    <com.yyyu.baselibrary.ui.widget.RoundImageView
        android:id="@+id/riv_coach"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/avril" />

</RelativeLayout>