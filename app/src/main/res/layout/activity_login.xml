    <LinearLayout
        android:id="@+id/ll_login_et"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:background="@mipmap/ic_login_et_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="66dp"
            android:layout_marginTop="44dp"
            android:background="@color/trans"
            android:hint="  Phone number"
            android:inputType="textPhonetic"
            android:textColor="#919EC4"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="66dp"
            android:layout_marginTop="42dp"
            android:background="@color/trans"
            android:hint="  Password"
            android:inputType="numberPassword"
            android:textColor="#919EC4"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_login_et"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password?"
        android:textColor="#FF919EC4"
        android:textSize="14sp" />

    <ImageButton
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@mipmap/ic_to_login"
        android:onClick="toLogin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="尚未注册？"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_to_register"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="馬上註冊!"
            android:onClick="toRegister"
            android:textColor="#FF000000"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>