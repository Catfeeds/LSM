<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体力状态" />

            <View
                android:id="@+id/v_status1"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tv_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精力充沛"
                android:textColor="@color/my_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疲劳状态" />

            <View
                android:id="@+id/v_status2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tv_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="续航持久"
                android:textColor="@color/my_blue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压力累积" />

            <View
                android:id="@+id/v_status3"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tv_status3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="承压千斤顶"
                android:textColor="@color/my_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡眠品质" />

            <View
                android:id="@+id/v_status4"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tv_status4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无法熟睡"
                android:textColor="@color/my_blue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hr_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_avg_hr"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="平均心率                63 bpm"
            android:textColor="#FF9B9B9B"
            android:gravity="center"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_max_hr"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="最大心率                63 bpm"
            android:textColor="#FF9B9B9B"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:gravity="right"
        android:text=""
        android:textSize="9dp" />

</LinearLayout>