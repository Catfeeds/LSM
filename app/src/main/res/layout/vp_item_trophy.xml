<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_trophy"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_trophy"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_trophy"
            android:text="08/23"
            android:textColor="#FF323643"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_lower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_trophy"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_trophy"
            android:text="08/30"
            android:textColor="#FF323643"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:text="戰利品"
        android:textColor="#FF000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Beats Studio Headphone"
        android:textColor="#FF323643"
        android:layout_marginBottom="5dp"
        android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>