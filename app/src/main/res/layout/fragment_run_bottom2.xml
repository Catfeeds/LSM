<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        app:columnCount="2"
        app:rowCount="4">

        <LinearLayout
            android:layout_margin="1dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-9dp"
                android:src="@mipmap/ic_btm_distance"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_dark"
                android:textSize="18sp"
                android:text="0.0 KM"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:text="total distance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-9dp"
                android:src="@mipmap/ic_btm_time"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_dark"
                android:textSize="18sp"
                android:text="00:00:00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:text="total time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-9dp"
                android:src="@mipmap/ic_btm_pace"/>
            <TextView
                android:id="@+id/tv_per_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_dark"
                android:textSize="18sp"
                android:text="0.0 min/km"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:text="total distance1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-9dp"
                android:src="@mipmap/ic_btm_hr"/>
            <TextView
                android:id="@+id/tv_avg_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_dark"
                android:textSize="18sp"
                android:text="0bpm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:text="average heart rate"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="left"
            android:paddingRight="60dp"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            app:layout_row="2"
            app:layout_rowWeight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_calorie_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/my_dark"
                    android:textSize="18sp"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="/450 cal"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="calories goal"/>
            <ProgressBar
                android:id="@+id/pb_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressTint="#0847EB"
                android:progressBackgroundTint="#0000"
                android:max="450000"
                android:progress="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingRight="60dp"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_distance_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/my_dark"
                    android:textSize="18sp"
                    android:text="0.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="/12.0 km"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="distance goal"/>
            <ProgressBar
                android:id="@+id/pb_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressTint="#9E41EA"
                android:progressBackgroundTint="#0000"
                android:max="1200"
                android:progress="0" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

</LinearLayout>