<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_ranking1">

        <com.yyyu.baselibrary.ui.widget.RoundImageView
            android:id="@+id/iv_ranking_user_icon"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/avril" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ranking_user_icon"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:text="Hank Lee"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO.1"
                android:textColor="#FFFFFFFF"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_ranking"
                android:layout_below="@+id/tv_ranking"
                android:text="分數"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_user_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13883820"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>